whatthedoodle.jussinevavuori.com {
  encode zstd gzip

  # API -> Bun server
  @api path /api/*
  handle @api {
    uri strip_prefix /api
    reverse_proxy wtd-server:8080 {
      transport http {
        versions h2c 1.1
      }
    }
  }
  
  # Frontend -> NGINX server
  handle {
    reverse_proxy http://wtd-client:5173
  }

  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    Referrer-Policy "strict-origin-when-cross-origin"
    X-Content-Type-Options "nosniff"
  }

  # optional cache-control for static assets
  @assets path_regexp static \.(css|js|png|jpg|jpeg|gif|svg|webp|ico|woff2?)$
  header @assets Cache-Control "public, max-age=31536000, immutable"
}